<div class=" box box-primary">
    <div class="box-header">
        <h3 class="box-title"><b>Ranking X Vendedor</b><small> (Mês atual)</small></h3>
    </div>
    <div class="box-body">
        <table id="monitores14" class="table table-striped table-hover" ng-show="rankings.length > 0">
            <thead>
            <tr>
                <th>Vendedor</th>
                <th>Equipe</th>
                <th>Qtde. Vendas</th>
                <th>Total Vendas</th>

            </tr>
            </thead>
            <tbody id="monitores24">

                <tr ng-repeat="item in rankings">

                    <td><b>{{item.Vendedor}}</b></td>
                    <td><b>{{item.Equipe}}</b></td>
                    <td class="text-center"><b>{{item.Quantidade}}</b></td>
                    <td class="text-center"><b>{{item.Valor | number:2}}</b></td>

                </tr>

            </tbody>
        </table>
        <!--<div class="progress xs">
            <div class="progress-bar progress-bar-green" data-bind="style: { width: PercentualGeral() }"></div>
        </div>-->
    </div><!-- /.box-body -->

</div>